<div class="uk-container">
  <div class="uk-padding-large">
    <form class="uk-search uk-search-large">
      <span uk-search-icon></span>
      <input data-search-provider data-endpoint="<%= search_path %>" class="uk-search-input" type="search" placeholder="<%= t 'home.search_form.placeholder' %>">
    </form>
  </div>

  <div id="search-results">

  </div>

  <h2><%= t 'home.list_providers.title' %></h2>
  <div class="uk-grid" uk-grid>
    <% @providers.each do |provider| %>
      <div class="uk-card uk-card-default uk-card-body uk-width-1-3@m">
        <%= link_to provider_path(provider) do %>
          <h3 class="uk-card-title"><%= provider.name %></h3>
        <%= pluralize(provider.examples.count, t('home.list_providers.example_label')) %>
        <% end %>

      </div>
    <% end %>
  </div>
</div>
